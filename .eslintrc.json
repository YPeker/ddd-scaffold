{
    "plugins": ["unused-imports"],
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": "error",
        "semi": ["error", "never"],
        "no-unused-expressions":  "error",
        "no-unused-vars": "off",
        "unused-imports/no-unused-imports": "error"
    }
}